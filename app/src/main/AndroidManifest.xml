<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.greylabs.todotoday">

    <application
        android:allowBackup="true"
        android:name=".app.TodoTodayApp"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">

        <activity android:name=".screens.tasks.TasksActivityView"
            android:screenOrientation="portrait"
            android:launchMode="singleTask">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"></action>
                <category android:name="android.intent.category.LAUNCHER"></category>
            </intent-filter>
        </activity>

        <activity
            android:name=".screens.task_detail.TaskDetailsActivity"
            android:screenOrientation="portrait">
        </activity>

        <activity
            android:name=".screens.add_task.AddTaskActivityView"
            android:screenOrientation="portrait">
        </activity>

    </application>

</manifest>
